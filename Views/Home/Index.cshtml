@model IEnumerable<Category>

@{
    ViewData["Title"] = "Các loại bánh";
}


<h1 class="display-4">@ViewData["Title"]</h1>
<div class="text-left">
    <a asp-controller="Home" asp-action="CreateCake" class="btn btn-primary mb-3 text-left"><i class="fa fa-plus"></i> Thêm bánh</a>
</div>
<div class="mx-auto">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Loại bánh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <th>
                        <a asp-controller="Home" asp-action="Category" asp-route-id="@item.CategoryId"><i class="far fa-eye"></i></a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>